<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="forty_eight">
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="notification_title">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="notification_text">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="list_view_divider">
        <item name="android:divider">@color/drawer_divider_item</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

    <style name="text.micro" parent="android:TextAppearance.Holo">
        <item name="android:textSize">12sp</item>
    </style>
    <style name="text.small" parent="android:TextAppearance.Holo">
        <item name="android:textSize">14sp</item>
    </style>
    <style name="text.medium" parent="android:TextAppearance.Holo">
        <item name="android:textSize">18sp</item>
    </style>
    <style name="text.large" parent="android:TextAppearance.Holo">
        <item name="android:textSize">22sp</item>
    </style>
    <style name="text.xlarge" parent="android:TextAppearance.Holo">
        <item name="android:textSize">30sp</item>
    </style>
    <style name="text.xxlarge" parent="android:TextAppearance.Holo">
        <item name="android:textSize">45sp</item>
    </style>
    <style name="text.xxxlarge" parent="android:TextAppearance.Holo">
        <item name="android:textSize">60sp</item>
    </style>

</resources>