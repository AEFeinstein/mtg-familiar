<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="350dp"
    android:paddingRight="350dp">
    <!-- white -->
    <!-- blue -->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Button
                android:id="@+id/white_minus"
                style="?attr/button"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:text="@string/mana_pool_minus"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dip"
                android:src="@drawable/glyph_w" />

            <TextView
                android:id="@+id/white_readout"
                style="@style/text.xxlarge"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/mana_pool_zero" />

            <Button
                android:id="@+id/white_plus"
                style="?attr/button"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:layout_marginRight="5sp"
                android:text="@string/mana_pool_plus"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Button
                android:id="@+id/blue_minus"
                style="?attr/button"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5sp"
                android:text="@string/mana_pool_minus"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dip"
                android:src="@drawable/glyph_u" />

            <TextView
                android:id="@+id/blue_readout"
                style="@style/text.xxlarge"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/mana_pool_zero" />

            <Button
                android:id="@+id/blue_plus"
                style="?attr/button"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:text="@string/mana_pool_plus"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
    <!-- black -->
    <!-- red -->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Button
                android:id="@+id/black_minus"
                style="?attr/button"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:text="@string/mana_pool_minus"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dip"
                android:src="@drawable/glyph_b" />

            <TextView
                android:id="@+id/black_readout"
                style="@style/text.xxlarge"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/mana_pool_zero" />

            <Button
                android:id="@+id/black_plus"
                style="?attr/button"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:layout_marginRight="5sp"
                android:text="@string/mana_pool_plus"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Button
                android:id="@+id/red_minus"
                style="?attr/button"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5sp"
                android:text="@string/mana_pool_minus"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dip"
                android:src="@drawable/glyph_r" />

            <TextView
                android:id="@+id/red_readout"
                style="@style/text.xxlarge"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/mana_pool_zero" />

            <Button
                android:id="@+id/red_plus"
                style="?attr/button"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:text="@string/mana_pool_plus"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
    <!-- green -->
    <!-- colorless -->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Button
                android:id="@+id/green_minus"
                style="?attr/button"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:text="@string/mana_pool_minus"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dip"
                android:src="@drawable/glyph_g" />

            <TextView
                android:id="@+id/green_readout"
                style="@style/text.xxlarge"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/mana_pool_zero" />

            <Button
                android:id="@+id/green_plus"
                style="?attr/button"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:layout_marginRight="5sp"
                android:text="@string/mana_pool_plus"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Button
                android:id="@+id/colorless_minus"
                style="?attr/button"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5sp"
                android:text="@string/mana_pool_minus"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dip"
                android:src="@drawable/glyph_x" />

            <TextView
                android:id="@+id/colorless_readout"
                style="@style/text.xxlarge"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/mana_pool_zero" />

            <Button
                android:id="@+id/colorless_plus"
                style="?attr/button"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:text="@string/mana_pool_plus"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
    <!-- spell -->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2">

            <Button
                android:id="@+id/spell_minus"
                style="?attr/button"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:text="@string/mana_pool_minus"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dip"
                android:src="@drawable/glyph_spell" />

            <TextView
                android:id="@+id/spell_readout"
                style="@style/text.xxlarge"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/mana_pool_zero" />

            <Button
                android:id="@+id/spell_plus"
                style="?attr/button"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:text="@string/mana_pool_plus"
                android:textStyle="bold" />
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

    </LinearLayout>
</LinearLayout>