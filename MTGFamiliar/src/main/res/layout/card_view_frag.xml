<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/master_layout"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:orientation="vertical">


    <ScrollView
        android:id="@+id/ScrollView1"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        style="@style/forty_eight"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/linearLayout7"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/name"
                        style="@style/text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dip"
                        android:layout_weight="1"
                        android:text="Vorinclex, Voice of Hunger"/>

                    <TextView
                        android:id="@+id/cost"
                        style="@style/text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="3dip"
                        android:layout_marginRight="3dip"
                        android:gravity="right"
                        android:maxWidth="120sp"
                        android:text="6GG"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout3"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-14sp">

                    <TextView
                        android:id="@+id/type"
                        style="@style/text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dip"
                        android:layout_weight="1"
                        android:text="Legendary Creature - Human Soldier"
                        android:textSize="20sp"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/set"
                    style="@style/text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="3dip"
                    android:layout_marginTop="-3sp"
                    android:gravity="right"
                    android:text="MOR"
                    android:textColor="@color/mythic"/>

                <LinearLayout
                    android:id="@+id/linearLayout4"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="10sp"
                    android:saveEnabled="true">

                    <TextView
                        android:id="@+id/ability"
                        style="@style/text"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dip"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="{T}: Search your library for a legendary card, reveal that card, and put it into your hand. Then shuffle your library."/>

                    <TextView
                        android:id="@+id/flavor"
                        style="@style/text"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dip"
                        android:layout_weight="1"
                        android:paddingLeft="10sp"
                        android:paddingRight="10sp"
                        android:paddingTop="5sp"
                        android:text="Neque porro quisquam est qui dolorem ipsum quia dolor sit amet flavor text."
                        android:textSize="20sp"
                        android:textStyle="italic"
                        android:typeface="serif"/>
                </LinearLayout>
            </LinearLayout>

            <FrameLayout
                android:id="@+id/frameLayout1"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <LinearLayout
                android:id="@+id/linearLayout5"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/linearLayout6"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/artist"
                        style="@style/text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dip"
                        android:layout_marginRight="3dip"
                        android:layout_marginTop="3dip"
                        android:layout_weight="1"
                        android:text="Zoltan Boros &amp; Gabor Szikszai"/>

                    <TextView
                        android:id="@+id/pt"
                        style="@style/text"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_marginBottom="0dip"
                        android:layout_marginLeft="3dip"
                        android:layout_marginRight="3dip"
                        android:layout_marginTop="3dip"
                        android:gravity="bottom|right"
                        android:text="*/1+*"/>
                </LinearLayout>

                <ImageView
                    android:id="@+id/cardpic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center"
                    android:contentDescription="@string/card_view_image"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <View
        android:id="@+id/transform_button_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/holo_blue_light"
        />

    <Button
        android:id="@+id/transformbutton"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:text="@string/card_view_transform"
        style="?android:attr/buttonBarButtonStyle"
        android:textStyle="bold"/>

</LinearLayout>