<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/traderRowName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/search_name"
            style="@style/text.medium"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp">

        <TextView
            android:id="@+id/traderRowSet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/search_set"
            style="@style/text.small"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="4dp">

        <ImageView
            android:id="@+id/traderRowFoil"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/glyph_foil"/>

        <TextView
            android:id="@+id/traderNumber"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="right"
            android:layout_height="wrap_content"
            android:text="@string/trader_default_number_of"
            style="@style/text.small"/>

        <TextView
            android:id="@+id/traderRowPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="@string/default_price"
            style="@style/text.small"/>

    </LinearLayout>
</LinearLayout>