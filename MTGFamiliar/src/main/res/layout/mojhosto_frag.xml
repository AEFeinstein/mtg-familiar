<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/master_layout"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:layout_marginLeft="16dp"
              android:layout_marginRight="16dp"
              android:layout_marginTop="4dp"
              android:orientation="vertical">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewMo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/mjs_momir_portrait"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView1"
                    style="@style/text.small"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:text="@string/mojhosto_momir_label"
                    android:gravity="center"/>

                <Spinner
                    android:id="@+id/momir_spinner"
                    android:layout_width="fill_parent"
                    android:layout_height="48dp"
                    android:entries="@array/momir_spinner"
                    android:gravity="center"/>
            </LinearLayout>

            <Button
                android:id="@+id/momir_button"
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:layout_margin="4dp"
                android:text="@string/mojhosto_random_creature"
                style="@style/text.small"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewSto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/mjs_stonehewer_portrait"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView6"
                    style="@style/text.small"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:text="@string/mojhosto_stonehewer_label"
                    android:gravity="center"/>

                <Spinner
                    android:id="@+id/stonehewer_spinner"
                    android:layout_width="fill_parent"
                    android:layout_height="48dp"
                    android:entries="@array/momir_spinner"
                    android:gravity="center"/>
            </LinearLayout>

            <Button
                android:id="@+id/stonehewer_button"
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:layout_margin="4dp"
                android:text="@string/mojhosto_random_equipment"
                style="@style/text.small"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewJho"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/mjs_jhoira_portrait"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="96dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <Button
                android:id="@+id/jhorira_instant_button"
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:layout_margin="4dp"
                android:text="@string/mojhosto_random_instants"
                style="@style/text.small"/>

            <Button
                android:id="@+id/jhorira_sorcery_button"
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:layout_margin="4dp"
                android:text="@string/mojhosto_random_sorceries"
                style="@style/text.small"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>