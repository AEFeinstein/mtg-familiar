<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.light" parent="Theme.base.light">
        <item name="android:colorPrimary">@color/material_blue_grey_400</item>
        <item name="android:colorPrimaryDark">@color/material_blue_grey_600</item>
        <item name="com.gelakinetic.mtgfam:button">@drawable/btn_ripple_light</item>
    </style>

    <style name="Theme.dark" parent="Theme.base.dark">
        <item name="android:colorPrimary">@color/material_blue_grey_800</item>
        <item name="android:colorPrimaryDark">@color/material_blue_grey_900</item>
        <item name="com.gelakinetic.mtgfam:button">@drawable/btn_ripple_dark</item>
    </style>

    <style name="MyCustomBetterPickerTheme.Light" parent="@style/BetterPickersDialogFragment.Light">
        <item name="bpKeyBackground">@drawable/btn_ripple_borderless_light</item>
        <item name="bpButtonBackground">@drawable/btn_ripple_borderless_light</item>
    </style>

    <style name="MyCustomBetterPickerTheme" parent="@style/BetterPickersDialogFragment">
        <item name="bpKeyBackground">@drawable/btn_ripple_borderless_dark</item>
        <item name="bpButtonBackground">@drawable/btn_ripple_borderless_dark</item>
    </style>

    <style name="Theme.transparent" parent="Theme.AppCompat.Dialog">
        <item name="alertDialogProTheme">@style/Theme.AlertDialogPro.Material.Light</item>
        <item name="android:colorPrimary">@color/material_blue_grey_400</item>
        <item name="android:colorPrimaryDark">@color/material_blue_grey_600</item>
    </style>

</resources>