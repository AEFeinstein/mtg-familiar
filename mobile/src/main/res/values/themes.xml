<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Theme.base.light" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="android:textColorLink">@color/hyperlink_text</item>

        <item name="colorPrimary_attr">@color/colorPrimary_light</item>
        <item name="colorPrimaryDark_attr">@color/colorPrimaryDark_light</item>
        <item name="colorPrimaryTransparent_attr">@color/colorPrimaryTransparent_light</item>
        <item name="colorAccent_attr">@color/colorAccent_light</item>

        <item name="colorCheckbox">@color/colorCheckbox_light</item>

        <item name="android:windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>

        <item name="color_background">@color/background_light</item>
        <item name="color_background_selected">@color/background_light_selected</item>
        <item name="selectable_row">@drawable/selectable_row_light</item>

        <item name="grey_border">@drawable/grey_border_light</item>
        <item name="color_text">@android:color/primary_text_light</item>

        <item name="color_common">@color/common_light</item>
        <item name="color_uncommon">@color/uncommon_light</item>
        <item name="color_rare">@color/rare_light</item>
        <item name="color_mythic">@color/mythic_light</item>
        <item name="color_timeshifted">@color/timeshifted_light</item>

        <item name="color_drawer_background">@color/drawer_background_light</item>
        <item name="color_drawer_text_unselected">@color/drawer_text_unselected_light</item>
        <item name="color_drawer_divider_item">@color/drawer_divider_item_light</item>
        <item name="colorControlNormal">@color/drawer_item_icon_light</item>
        <item name="selector_drawer_text">@drawable/drawer_text_light</item>

        <item name="lc_enabled">@color/lc_enabled_light</item>
        <item name="lc_disabled">@color/lc_disabled_light</item>

        <item name="drawer_background_indicator">@drawable/drawer_background_indicator_light</item>

        <item name="btn_check_foil">@drawable/btn_check_light_foil</item>

        <item name="hms_picker_style">@style/MyCustomBetterPickerTheme.Light</item>

        <item name="num_picker_style">@style/BetterPickersDialogFragment.Light</item>

        <item name="button">@style/button_light</item>

        <!-- Use light theme for dialogs -->
        <item name="md_dark_theme">false</item>
    </style>

    <style name="Theme.base.dark" parent="Theme.AppCompat.NoActionBar">

        <item name="android:textColorLink">@color/hyperlink_text</item>

        <item name="colorPrimary_attr">@color/colorPrimary_dark</item>
        <item name="colorPrimaryDark_attr">@color/colorPrimaryDark_dark</item>
        <item name="colorPrimaryTransparent_attr">@color/colorPrimaryTransparent_dark</item>
        <item name="colorAccent_attr">@color/colorAccent_dark</item>

        <item name="colorCheckbox">@color/colorCheckbox_dark</item>

        <item name="android:windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>

        <item name="color_background">@color/background_dark</item>
        <item name="color_background_selected">@color/background_dark_selected</item>
        <item name="selectable_row">@drawable/selectable_row_dark</item>

        <item name="grey_border">@drawable/grey_border_dark</item>
        <item name="color_text">@android:color/primary_text_dark</item>

        <item name="color_common">@color/common_dark</item>
        <item name="color_uncommon">@color/uncommon_dark</item>
        <item name="color_rare">@color/rare_dark</item>
        <item name="color_mythic">@color/mythic_dark</item>
        <item name="color_timeshifted">@color/timeshifted_dark</item>

        <item name="color_drawer_background">@color/drawer_background_dark</item>
        <item name="color_drawer_text_unselected">@color/drawer_text_unselected_dark</item>
        <item name="color_drawer_divider_item">@color/drawer_divider_item_dark</item>
        <item name="colorControlNormal">@color/drawer_item_icon_dark</item>
        <item name="selector_drawer_text">@drawable/drawer_text_dark</item>

        <item name="lc_enabled">@color/lc_enabled_dark</item>
        <item name="lc_disabled">@color/lc_disabled_dark</item>

        <item name="drawer_background_indicator">@drawable/drawer_background_indicator_dark</item>

        <item name="btn_check_foil">@drawable/btn_check_dark_foil</item>

        <item name="hms_picker_style">@style/MyCustomBetterPickerTheme</item>
        <item name="num_picker_style">@style/BetterPickersDialogFragment</item>

        <item name="button">@style/button_dark</item>

        <!-- Use dark theme for dialogs -->
        <item name="md_dark_theme">true</item>
        <item name="md_positive_color">@android:color/secondary_text_dark</item>
        <item name="md_neutral_color">@android:color/secondary_text_dark</item>
        <item name="md_negative_color">@android:color/secondary_text_dark</item>

    </style>

    <style name="Theme.light" parent="Theme.base.light">
        <item name="colorPrimary">@color/colorPrimary_light</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_light</item>
        <item name="colorAccent">@color/colorAccent_light</item>
    </style>

    <style name="Theme.dark" parent="Theme.base.dark">
        <item name="colorPrimary">@color/colorPrimary_dark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_dark</item>
        <item name="colorAccent">@color/colorAccent_dark</item>
    </style>

    <style name="MyCustomBetterPickerTheme.Light" parent="@style/BetterPickersDialogFragment.Light">
        <item name="bpKeyBackground">@drawable/btn_default_custom_borderless_light</item>
        <item name="bpButtonBackground">@drawable/btn_default_custom_borderless_light</item>
    </style>

    <style name="MyCustomBetterPickerTheme" parent="@style/BetterPickersDialogFragment">
        <item name="bpKeyBackground">@drawable/btn_default_custom_borderless_dark</item>
        <item name="bpButtonBackground">@drawable/btn_default_custom_borderless_dark</item>
    </style>

    <style name="Theme.transparent" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/colorPrimary_light</item>
        <item name="colorPrimaryTransparent_attr">@color/colorPrimaryTransparent_light</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_light</item>
        <item name="colorAccent">@color/colorAccent_light</item>
    </style>
</resources>