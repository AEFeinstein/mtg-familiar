<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/changeSetCombo"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:orientation="horizontal"
    android:paddingLeft="8dp"
    android:paddingRight="8dp">

    <ImageView
        android:id="@+id/changeSetImage"
        android:layout_width="@dimen/ExpansionImageWidthLarge"
        android:layout_height="@dimen/ExpansionImageHeightLarge"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical" />

    <TextView
        android:id="@+id/changeSetName"
        style="@style/text.medium"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:lines="1"
        android:text="@string/card_view_change_set" />

</LinearLayout>