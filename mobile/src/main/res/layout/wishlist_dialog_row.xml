<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dialog_layout_root"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:baselineAligned="false"
    android:orientation="horizontal">

    <Button
        android:id="@+id/number_button"
        style="?attr/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="99"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />

    <ImageView
        android:id="@+id/cardsetimage"
        android:layout_width="@dimen/ExpansionImageWidthLarge"
        android:layout_height="@dimen/ExpansionImageHeightLarge"
        android:layout_gravity="center_vertical" />

    <TextView
        android:id="@+id/cardset"
        style="@style/text.medium"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:ellipsize="end"
        android:lines="1"
        android:text="@string/search_set" />

    <ImageView
        android:id="@+id/wishlistDialogFoil"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/glyph_foil" />

</LinearLayout>
