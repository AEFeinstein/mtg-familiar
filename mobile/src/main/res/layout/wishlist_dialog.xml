<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_layout_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:id="@+id/divider1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?attr/colorPrimary_attr" />

    <Button
        android:id="@+id/show_card_button"
        style="?android:attr/buttonBarButtonStyle"

        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:text="@string/wishlist_view_card"
        android:textStyle="bold" />

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?attr/colorPrimary_attr" />

    <com.gelakinetic.mtgfam.helpers.autocomplete.AddToWishlistSetsField
        android:id="@+id/wishlist_sets"
        style="@style/Widget.AppCompat.AutoCompleteTextView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:dropDownWidth="wrap_content"
        android:hint="@string/search_sets"
        android:imeOptions="actionSearch"
        android:inputType="text" />
</LinearLayout>