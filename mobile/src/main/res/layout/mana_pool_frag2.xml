<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="4dp">

    <com.google.android.flexbox.FlexboxLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/add_mana"
        android:layout_centerInParent="true"
        app:alignContent="center"
        app:alignItems="center"
        app:justifyContent="center"
        app:flexWrap="wrap">

        <FrameLayout
            android:id="@+id/pool_white_mana"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                style="@style/mana_image_large"
                app:srcCompat="@drawable/glyph_w"/>

            <TextView
                android:id="@+id/pool_white_text"
                style="@style/mana_pool_text"
                tools:text="10"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/pool_blue_mana"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                style="@style/mana_image_large"
                app:srcCompat="@drawable/glyph_u"/>

            <TextView
                android:id="@+id/pool_blue_text"
                style="@style/mana_pool_text"
                tools:text="10"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/pool_black_mana"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                style="@style/mana_image_large"
                app:srcCompat="@drawable/glyph_b"/>

            <TextView
                android:id="@+id/pool_black_text"
                style="@style/mana_pool_text"
                tools:text="10"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/pool_red_mana"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                style="@style/mana_image_large"
                app:srcCompat="@drawable/glyph_r"/>

            <TextView
                android:id="@+id/pool_red_text"
                style="@style/mana_pool_text"
                tools:text="10"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/pool_green_mana"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                style="@style/mana_image_large"
                app:srcCompat="@drawable/glyph_g"/>

            <TextView
                android:id="@+id/pool_green_text"
                style="@style/mana_pool_text"
                tools:text="10"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/pool_colorless_mana"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                style="@style/mana_image_large"
                app:srcCompat="@drawable/glyph_c"/>

            <TextView
                android:id="@+id/pool_colorless_text"
                style="@style/mana_pool_text"
                tools:text="10"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/pool_energy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                style="@style/mana_image_large"
                app:srcCompat="@drawable/glyph_e"/>

            <TextView
                android:id="@+id/pool_energy_text"
                style="@style/mana_pool_text"
                tools:text="10"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/pool_storm_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                style="@style/mana_image_large"
                app:srcCompat="@drawable/glyph_spell2"/>

            <TextView
                android:id="@+id/pool_storm_count_text"
                style="@style/mana_pool_text"
                tools:text="10"/>
        </FrameLayout>

    </com.google.android.flexbox.FlexboxLayout>

    <LinearLayout
        android:id="@+id/add_mana"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:paddingTop="20dp">

        <ImageView
            style="@style/mana_image_small"
            app:srcCompat="@drawable/glyph_w"/>

        <ImageView
            style="@style/mana_image_small"
            android:layout_marginLeft="8dp"
            app:srcCompat="@drawable/glyph_u"/>

        <ImageView
            style="@style/mana_image_small"
            android:layout_marginLeft="8dp"
            app:srcCompat="@drawable/glyph_b"/>

        <ImageView
            style="@style/mana_image_small"
            android:layout_marginLeft="8dp"
            app:srcCompat="@drawable/glyph_r"/>

        <ImageView
            style="@style/mana_image_small"
            android:layout_marginLeft="8dp"
            app:srcCompat="@drawable/glyph_g"/>

        <ImageView
            style="@style/mana_image_small"
            android:layout_marginLeft="8dp"
            app:srcCompat="@drawable/glyph_c"/>

        <ImageView
            style="@style/mana_image_small"
            android:layout_marginLeft="8dp"
            app:srcCompat="@drawable/glyph_e"/>

        <ImageView
            style="@style/mana_image_small"
            android:layout_marginLeft="8dp"
            app:srcCompat="@drawable/glyph_spell2"/>

    </LinearLayout>

</RelativeLayout>